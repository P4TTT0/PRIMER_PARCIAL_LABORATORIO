#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <windows.h>
#include "desarrollo.h"
#include "censo.h"

int id = 2000;

int generarId()
{
	id++;

	return id;
}

void clear()
{
	printf("\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n");
}

void AnimacionApagado()
{
	int i;
	int frames;

	frames = 5;

	for(i = 0; i < frames; i++)
	{
		switch(i)
		{
		case 1:
			clear();
			printf("|>--       5          <|");
			Sleep(500);
		break;
		case 2:
			clear();
			printf("|>-----   35          <|");
			Sleep(500);
		break;
		case 3:
			clear();
			printf("|>--------65--        <|");
			Sleep(500);
		break;
		case 4:
			clear();
			printf("|>--------95-------   <|");
			Sleep(500);
		break;
		case 5:
			clear();
			printf("|>--------100---------<|");
			Sleep(500);
		break;
		}
	}
}
